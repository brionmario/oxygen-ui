{
  "git": {
    "tagName": "oxygen-ui@${version}",
    "commitMessage": "chore(release): update package versions to v${version} ðŸŽ‰",
    "tagAnnotation": "Release ${tagName}"
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    },
    "@release-it-plugins/workspaces": {
      "dependencyUpdates": []
    }
  },
  "npm": {
    "pnpm": true,
    "publishArgs": ["-r", "--access", "public"],
    "allowSameVersion": true,
    "skipChecks": true,
    "publish": true
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
